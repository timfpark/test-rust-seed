{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run",
      "type": "shell",
      "command": "cargo run",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "check",
      "type": "shell",
      "command": "cargo check",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "run in local cluster",
      "type": "shell",
      "command": ".devcontainer/run.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "reset dev environment",
      "type": "shell",
      "command": ".devcontainer/teardown.sh && .devcontainer/launch.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "expert mode",
      "type": "shell",
      "command": ".devcontainer/expertMode.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
  ]
}